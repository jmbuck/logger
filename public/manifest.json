{
  "short_name": "Logger",
  "name": "Logger Extension",
  "description": "Tracks your internet browsing",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Logger"
  },
  "options_page": "index.html",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "*://*/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "Background.js",
      "Network.js"
      ],
    "persistent": true
  }
}
